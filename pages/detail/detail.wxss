.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #fff;
}

.content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

.post-detail {
  background: #fff;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-info {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.post-content {
  padding-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

.interaction-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  align-items: center;
}

.action-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.action-item text {
  font-size: 26rpx;
  color: #666;
}

.comments-section {
  flex: 1;
  background: #fff;
}

.section-title {
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f0f0f0;
}

.comments-list {
  padding: 0 24rpx;
}

.comment-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.comment-username {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.comment-input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  z-index: 100;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #1890ff;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 0;
}

.share-btn {
  background: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.share-btn::after {
  border: none;
}

.no-comment {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

.replies-container {
  margin-left: 40rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  border-left: 2rpx solid #f0f0f0;
}

.reply-item {
  display: flex;
  padding: 16rpx 0;
}

.reply-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.reply-content {
  flex: 1;
  min-width: 0;
}

.reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4rpx;
  flex-wrap: nowrap;
}

.reply-username {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  display: inline;
}

.reply-time {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
  flex-shrink: 0;
}

.reply-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.comment-actions,
.reply-actions {
  margin-top: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 4rpx 0;
}

.action-left,
.action-right {
  display: flex;
  align-items: center;
}

.like-btn {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  display: inline-flex;
  align-items: center;
}

.like-btn.liked {
  color: #1890ff;
}

.reply-btn {
  font-size: 24rpx;
  color: #1890ff;
  padding: 4rpx 12rpx;
  display: inline-flex;
  align-items: center;
}

.input-actions {
  display: flex;
  align-items: center;
}

.cancel-reply {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
  padding: 0 20rpx;
}

.reply-users {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  flex-direction: row;
}

.reply-to {
  color: #999;
  margin: 0 8rpx;
  font-size: 24rpx;
  display: inline;
}

.reply-username {
  color: #1890ff;
  font-size: 24rpx;
  font-weight: bold;
  display: inline;
}

.reply-actions {
  margin-top: 8rpx;
}

.reply-btn {
  font-size: 24rpx;
  color: #1890ff;
  padding: 4rpx 12rpx;
  display: inline-block;
}

/* 可以添加一些hover效果 */
.like-btn:active,
.reply-btn:active {
  opacity: 0.8;
}

.post-image, .post-video {
  width: 220rpx;
  height: 220rpx;
  margin: 5rpx;
  border-radius: 8rpx;
}

.single-image, .single-video {
  width: 100%;
  max-height: 400rpx;
  margin: 10rpx 0;
}

.image-container {
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx -5rpx;
} 