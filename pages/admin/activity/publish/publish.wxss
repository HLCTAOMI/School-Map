/* pages/admin/activity/publish/publish.wxss */
.publish-container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-item {
  background-color: #fff;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
}

.label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}

.input {
  width: 100%;
  height: 40px;
  border: 1px solid #eee;
  border-radius: 4px;
  padding: 0 10px;
  font-size: 14px;
}

.textarea {
  width: 100%;
  height: 120px;
  border: 1px solid #eee;
  border-radius: 4px;
  padding: 10px;
  font-size: 14px;
}

.picker {
  height: 40px;
  line-height: 40px;
  border: 1px solid #eee;
  border-radius: 4px;
  padding: 0 10px;
  font-size: 14px;
}

.placeholder {
  color: #999;
}

.form-actions {
  margin-top: 30px;
  padding: 0 20px;
}

.submit-btn {
  background-color: #07c160;
  color: white;
  font-size: 16px;
  padding: 10px 0;
  border-radius: 4px;
}