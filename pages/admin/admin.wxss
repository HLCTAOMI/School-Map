.admin-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.admin-header {
  padding: 20px;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eee;
}

.header-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
}

.admin-content {
  margin-top: 20px;
}

.menu-list {
  background-color: #ffffff;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  border-bottom: 1rpx solid #eee;
}

.menu-item text {
  font-size: 16px;
  color: #333;
}

.arrow-icon {
  color: #999;
  font-size: 18px;
} 