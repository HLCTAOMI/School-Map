/* pages/about/about.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.form-group {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.input-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  position: relative;
}

.picker-inner {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 添加右侧箭头图标 */
.picker::after {
  content: "";
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  border-right: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  transform: translateY(-50%) rotate(45deg);
}

/* 未选择时的样式 */
.picker-inner:empty::before {
  content: "请选择";
  color: #999;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.upload-box {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn {
  margin-top: 50rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  background: #07c160;
}

/* 添加输入框焦点效果 */
.input:focus, .textarea:focus {
  background: #fff;
  border: 2rpx solid #07c160;
}

/* 添加必填项标记 */
.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 4rpx;
}