/* 全局容器 */
.container {
  width: 100%;
  min-height: 100vh;
  background: #f8f8f8;
}

/* 状态栏占位 */
.status-bar {
  height: 88rpx; /* 根据实际设备调整 */
  width: 100%;
  background: #fff;
}

/* 搜索头部 */
.search-header {
  position: fixed;
  top: 88rpx; /* 与状态栏高度一致 */
  left: 0;
  right: 0;
  z-index: 1000;
  background: #fff;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-right: 24rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  margin-right: 24rpx; /* 与右侧胶囊按钮保持间距 */
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 32rpx;
  line-height: 32rpx;
}

/* 导航容器 */
.nav-container {
  position: fixed;
  top: 176rpx; /* 状态栏 + 搜索框高度 */
  left: 0;
  right: 0;
  z-index: 999;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

/* 导航标签 */
.nav-tabs {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.tab {
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 0 20rpx;
}

.tab.active {
  color: #333;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #FF6347;
  border-radius: 2rpx;
}

/* 帖子列表容器 */
.posts-list {
  position: fixed;
  top: 264rpx; /* 状态栏 + 搜索框 + 导航栏的总高度 */
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

/* 发帖按钮 */
.post-btn {
  position: fixed;
  right: 20px;
  bottom: 20px;
  background-color: #FF6347;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.plus-icon {
  font-size: 30px;
  color: white;
}

/* 帖子卡片 */
.post-card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail .username {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  display: block;
}

.user-detail .time {
  font-size: 12px;
  color: #888;
  display: block;
  margin-top: 2px;
}


/* 帖子内容 */
.post-content .title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px; /* 为了在标题和内容之间添加一些空间 */
  display: block; /* 确保标题在一行，内容会在下一行 */
}

.post-content .content {
  font-size: 14px;
  color: #666;
  display: block; /* 确保内容在标题下面显示 */
  margin-top: 5px; /* 内容和图片的间距 */
}

.image-container {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

.post-image {
  width: 100%;
  max-height: 200px;
  border-radius: 8px;
  margin-bottom: 10px;
}

.single-image {
  max-width: 100%;
  height: auto;
}


/* 互动栏 */
.interaction-bar {
  display: flex;
  justify-content: space-around;
  padding: 10px 0;
  border-top: 1px solid #f0f0f0;
  margin-top: 10px;
}

.action-item {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #777;
}

.like-icon, .comment-icon, .share-icon {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.likes-text, .comments-text {
  margin-left: 5px;
}

/* 分享按钮 */
.share-btn {
  background-color: #f0f0f0;
  border-radius: 20px;
  padding: 5px 15px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 按钮hover效果 */
.share-btn:hover {
  background-color: #ddd;
}

.action-item:hover {
  color: #4CAF50;
  cursor: pointer;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
  margin-top: 20px;
  cursor: pointer;
  color: #888;
}

.load-more:hover {
  background-color: #ddd;
}

.header-right {
  display: flex;
  align-items: center;
}

.search-icon, .camera-icon {
  width: 44rpx;
  height: 44rpx;
  margin-left: 30rpx;
}

.search-icon image, .camera-icon image {
  width: 100%;
  height: 100%;
}
