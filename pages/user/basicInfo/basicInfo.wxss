page {
  background-color: #f7f7f7;
}

.container {
  padding: 30rpx;
}

/* 卡片式设计 */
.info-list {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 10rpx 0;
  position: relative;
  overflow: hidden;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  position: relative;
}

/* 分隔线效果 */
.info-item:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 1rpx;
  background: #f0f0f0;
}

.label {
  color: #333333;
  font-size: 28rpx;
  font-weight: 500;
}

.value-container {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
}

.value {
  color: #666666;
  font-size: 28rpx;
  margin-right: 20rpx;
  max-width: 400rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 箭头样式优化 */
.arrow {
  color: #cccccc;
  font-family: "PingFang SC";
  font-weight: 300;
  font-size: 32rpx;
  transform: scaleX(0.8);
}

/* 点击效果 */
.info-item:active {
  background-color: rgba(0, 0, 0, 0.02);
}

/* 顶部用户头像区域 */
.user-header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: 0 auto 20rpx;
  border: 6rpx solid #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999999;
}

/* 提示文本 */
.tips {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-top: 40rpx;
  padding: 0 40rpx;
} 