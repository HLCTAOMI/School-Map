page {
  background: #f7f7f7;
}

.container {
  padding: 30rpx;
}

.input-box {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.input {
  font-size: 30rpx;
  color: #333;
  width: 100%;
  padding-right: 80rpx;
}

.counter {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}

.gender-value {
  font-size: 30rpx;
  color: #333;
  min-height: 42rpx;
}

.gender-value.placeholder {
  color: #999;
}

.tips {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 30rpx;
}

.btn-area {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.save-btn {
  background: #00b26a;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.save-btn:active {
  opacity: 0.8;
}

/* 性别选择器样式 */
.picker-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
  background: #fff;
  z-index: 1001;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-cancel, .picker-confirm {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.picker-cancel {
  color: #999;
}

.picker-confirm {
  color: #00b26a;
}

.picker-title {
  font-size: 30rpx;
  color: #333;
}

.picker-item {
  line-height: 50px;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 42rpx;
}

.picker-content .placeholder {
  color: #999;
}

.arrow {
  color: #999;
  font-size: 32rpx;
  transform: rotate(90deg);
}

.phone-input-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

.phone-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.send-code-btn {
  width: 200rpx !important;
  height: 70rpx !important;
  line-height: 70rpx !important;
  font-size: 26rpx !important;
  padding: 0 !important;
  margin: 0 !important;
  background: #00b26a !important;
  color: #fff !important;
  border-radius: 35rpx !important;
}

.send-code-btn.disabled {
  background: #ccc !important;
  color: #fff !important;
}

.verify-input {
  font-size: 30rpx;
  color: #333;
  width: 100%;
}

.tips {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 30rpx;
} 